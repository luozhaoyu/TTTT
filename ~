# only set /s/std/bin if it's not a root user
if [ $UID -ne 0 ]; then
  PATH=/s/std/bin:$PATH
fi

if [ -d "/s" ]; then
  # set linux paths
  PATH=$PATH:/usr/afsws/bin # AFS SOFTWARE
  PATH=$PATH:/opt/SUNWspro/bin # compilers (on Solaris)
  PATH=$PATH:/usr/ccs/bin # programming tools (on Solaris)
  PATH=$PATH:/usr/ucb # standard programs
  PATH=$PATH:/bin # standard programs
  PATH=$PATH:/usr/bin # standard programs
  PATH=$PATH:/usr/X11R6/bin # X software for linux
  PATH=$PATH:/s/handin/bin # handin software
  PATH=$PATH:/unsup/llvm-3.3/bin #LLVM
else
  # set cygwin paths
  PATH=$PATH:/cygdrive/c/WINDOWS
  PATH=$PATH:/cygdrive/c/Progra~1/OpenAFS/Client/Program
fi

# Add Mac OS X Paths
if [ `uname` = "Darwin" ]; then
  PATH=$PATH:"/usr/local/git/bin"
fi

# The following line should be removed for security, but too
# many people get confused if it isn't there. If you remove it, "." (the
# current# directory will not be in your path, and you will have to type
# (for example)
# "./a.out" instead of "a.out" in order to run the a.out program
PATH=$PATH:.

export PATH
export PATH=${PATH}:/u/d/o/dottl/Desktop/adt-bundle-linux-x86_64-20130219/sdk/platform-tools
#remove domain name (.cs.wisc.edu in our case) from hostname, if
# domain name
# is in hostname (otherwise, just hostname).
export HOSTNAME=`hostname | sed -e s/\\..\*//`
export JAVA_HOME=/usr/bin/java

# Add aliases here. For more information on aliases, and shell
# commands in general, type "man bash"

alias msgs="msgs -p" # pipe long message through the paging program (more)
alias rm="rm -i" # always ask before removing a file
alias mv="mv -i" # always ask before moving a file onto another file
alias cp="cp -i" # always ask before copying a file onto another file
alias logout="exit" # make "logout" work in "script" too
alias gch="git checkout"
alias gp="git push"
alias gpl="git pull --rebase"
alias gpom="git push origin master"
alias gplom="git pull --rebase origin master"
alias gc="git commit -am "
alias ga="git add -A ."
alias gl="git log"
alias gb="git branch -a"
alias gr="git reset --hard"
alias gs="git status"
alias hadoop="~/hadoop/bin/hadoop"

if [ `uname` = "Linux" ]; then
  alias ls="ls -bF --color" # "b" will show control characters as '?'
                        # "F" will show a trailing "/" after directories
                        # and a "*" after executables
                        # --color will do color coding for different
                        # file types on linux
elif [ `uname` = "Darwin" ]; then
  alias ls="ls -bFG" # same as linux ls, but --color is -G in OSX
else
        alias ls="ls -bF"
fi

if [ "$PS1" ]; then
  set -o ignoreeof # ignore ^D (^D Will not exit the shell)
        set -o noclobber # Can't > to existing files
        set mail=/usr/spool/mail/$USER # What file to check for new mail
  set -o notify # Report change in jobs' status

  export PS1="[\u@\h] (\#)\$ " # Set our prompt (man bash for more info)
  # the line below will generate a very colorful prompt for those who
  # like such things
  #export PS1="\[\033[01;39m\]\u@\h\[\033[01;34m\] \W \$ \[\033[00m\]"

        if [ -n "$TERM" ]; then
                if [ "$TERM" = "xterm" ]; then
                        # define 'mytitle' alias to set tile bars on
                        # xterms
                        alias icon_name='set icon_name = /`echo $cwd |
                        sed -e s-.\*/--`'
                        alias mytitle='icon_name; echo -n ]0\;\!*\'

                        # define 'name', 'icon', and 'title' aliases to
                        # allow the user
                        # to give xterm windows names by hand.
                        alias name='echo -n ]0\;\!*\'
                        alias icon='echo -n "]1\;\!*\"'
                        alias title='echo -n "]2\;\!*\"'

                        # use xrs (resize) to reset window size after
                        # resizing an xterm
                        alias xrs='set -o noglob; eval `resize`;
                        unset noglob'

                        # un-comment out the following lines if you want
                        # the machine
                    # name and current directory to appear in the
                    # titlebar and
                    # the last part of the current directory to
                    # appear in the
                    # icon manager.
                    #
                    # mytitle
                    # alias cd="chdir \!*; mytitle"
                    # alias pushd="pushd \!*; mytitle"
                    # alias popd="popd \!*; mytitle"
                fi
        fi
fi;

if [ -f ~/.bashrc.local ]; then
   source ~/.bashrc.local
fi
function myg++() { g++ -Wall $1 -o `echo $1 | cut -d. -f1` ; }
alias g='myg++'

export CLASSPATH=".:/p/course/cs536-hasti/public/JAVA" 
